<?xml version="1.0"?>
<!-- robot_arm_macros.xacro -->
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- ====== CYLINDER LINK MACRO ====== -->
  <xacro:macro name="link_cylinder" params="name xyz rpy radius length mass ixx iyy izz">
    <link name="${name}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="${mass}"/>
        <inertia 
          ixx="${ixx}"
          ixy="0.0" 
          ixz="0.0" 
          iyy="${iyy}"
          iyz="0.0" 
          izz="${izz}"/>
      </inertial>
      <visual>
        <geometry>
          <cylinder radius="${radius}" length="${length}"/>
        </geometry>
        <origin xyz="${xyz}" rpy="${rpy}"/>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="${radius}" length="${length}"/>
        </geometry>
        <origin xyz="${xyz}" rpy="${rpy}"/>
      </collision>
    </link>
  </xacro:macro>

  <!-- ====== BOX LINK MACRO ====== -->
  <xacro:macro name="cobot_link_box" params="name origin_xyz origin_rpy size mass ixx ixy ixz iyy iyz izz">
    <link name="${name}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="${mass}"/>
        <inertia 
          ixx="${ixx}" 
          ixy="${ixy}" 
          ixz="${ixz}" 
          iyy="${iyy}" 
          iyz="${iyz}" 
          izz="${izz}"/>
      </inertial>
      <visual>
        <geometry>
          <box size="${size}"/>
        </geometry>
        <origin xyz="${origin_xyz}" rpy="${origin_rpy}"/>
      </visual>
      <collision>
        <geometry>
          <box size="${size}"/>
        </geometry>
        <origin xyz="${origin_xyz}" rpy="${origin_rpy}"/>
      </collision>
    </link>
  </xacro:macro>

  <!-- ====== UNIFIED JOINT MACRO ====== -->
  <xacro:macro name="cobot_joint" params="name type parent child axis limit_l limit_u limit_v limit_e origin_xyz origin_rpy">
    <joint name="${name}" type="${type}">
      <parent link="${parent}"/>
      <child link="${child}"/>
      <!-- Only add axis and limit for non-fixed joints -->
      <xacro:if value="${type != 'fixed'}">
        <axis xyz="${axis}"/>
        <limit lower="${limit_l}" upper="${limit_u}" velocity="${limit_v}" effort="${limit_e}"/>
      </xacro:if>
      <origin xyz="${origin_xyz}" rpy="${origin_rpy}"/>
    </joint>
  </xacro:macro>

</robot>
