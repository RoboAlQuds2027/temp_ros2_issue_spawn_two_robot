<?xml version="1.0"?>
<robot name="robot2">

  <!-- World link -->
  <link name="world2"/>

  <!-- Base link (cylinder shape) -->
  <link name="base2_link">
    <visual>
      <geometry>
        <cylinder radius="0.25" length="0.2"/>
      </geometry>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <material name="yellow">
        <color rgba="1 1 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.25" length="0.2"/>
      </geometry>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="3.0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.15"/>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </inertial>
  </link>

  <!-- Fixed joint -->
  <joint name="base_to_world" type="fixed">
    <parent link="world2"/>
    <child link="base2_link"/>
    <origin xyz="2 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Sensor link -->
  <link name="sensor_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="purple">
        <color rgba="1 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Continuous joint for rotating sensor -->
  <joint name="sensor_joint" type="continuous">
    <parent link="base2_link"/>
    <child link="sensor_link"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>